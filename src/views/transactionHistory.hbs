<form action="" method="post">
  <h5>Showing Transactions from <input class="date-field" type="date" name="startingDate" value="{{startingDate}}"> to <input class="date-field" type="date" name="endingDate" value="{{endingDate}}"> <button class="">Show</button></h5>
</form>

<div class="table-wrapper">
<table class="table table-striped transaction-table">
    <thead>
        <tr>
            <th id="date-col" scope="col" class="sortable">Date</th>
            <th scope="col">Type</th>
            <th id="budget-col" scope="col" class="sortable">Budget</th>
            <th id="category-col" scope="col" class="sortable">Category</th>
            <th id="expense-col" scope="col" class="sortable">Expense</th>
            <th id="amount-col" scope="col"class="sortable">Amount</th>
        </tr>
    </thead>
  <tbody>
      {{#each allTransactions}}
        {{> transactionTableRow}}
      {{/each}}
  </tbody>
</table>

<script src="/js/transactionHistory.js"></script>

 