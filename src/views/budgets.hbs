<div class="container center">
  <div class="row">
  <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center header-color">
        <h1>Monthly Budgets</h1>
    </div>
  </div>
  <br>
  <div class="col-lg-3"></div>
</div>

    <div class="card center budget-card" style="width: 65rem;">
    <div class="card-body">
      <h5 class="card-title budget-title">Monthly Budgets Total</h5>
      <p class="budget-values">${{totalCurrentValue}} <small class="text-muted text-size-sm">/ ${{totalMaxValue}}</small></p>
      <div class="progress">
        <div class="progress-bar bg-success" role="progressbar" style="width: {{totalPercentageFilled}}%" aria-valuenow="{{totalPercentageFilled}}" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
  </div>
  <br>

  {{#each budgets}}
    {{> budgetCard}}
  {{/each}}
</div>



<script src="/js/utils/progressBarUpdater.js"></script>
<script src="/js/utils/budgetCardDisplay.js"></script>