 <div class="row">
        <br>
        <br>
        <br>
    </div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center header-color">
            <h1>Make a Deposit</h1>
        </div>
    </div>
    <div class="col-lg-3"></div>
    <div class="row pt-3">
        <div class="col-xs-3 col-md-4 col-lg-4 col-sm-4"></div>

        <div class="col-xs-6 col-md-4 col-lg-4  col-sm-4 d-flex justify-content-center px-5 py-5 align-middle rounded bright">
            <form class="text-center glow-purple" id="budget-form" action="" method="post">
                <label for="category">Select category</label>
                    <select class="form-select" aria-label="Select category" name="category">
                        <option value="" disabled selected >Please select a category...</option>
                        <option value="salary">Salary</option>
                        <option value="dividends">Dividends</option>
                        <option value="capital-gains">Capital Gains</option>
                        <option value="interest">Interest</option>
                        <option value="clothing">Rental Income</option>
                        <option value="other">Other</option>
                    </select>

            <label for="amount">Deposit Amount</label>
            <input id="budget-maxvalue" type="text" class="form-control" placeholder="Enter deposit amount.." name="amount" value="">
            </input>
            <br>
            <button type="submit" class="btn btn-primary">Create</button>

            {{#if depositError}}
                <div id="budgetErrorMessage" class="alert alert-danger" role="alert">
                Please fill out all the fields.
                </div>
            {{/if}}
            </form>
        </div>

        <div class="col-xs-3 col-md-4 col-lg-4 col-sm-4"></div>
    </div>

    {{#if errorMessage}}
    <div class="row ptb-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 d-flex justify-content-center">
            
            <p class="errorMessage">{{errorMessage}}</p>
            
        </div>
        <div class="col-lg-3"></div>
    </div>
    {{/if}}

<script src="/js/transaction-form/popUpForm.js"></script>
<script src="/js/utils/balanceFieldCorrector.js"></script>